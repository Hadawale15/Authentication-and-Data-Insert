<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background4"
    tools:context=".RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:textSize="30sp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/registration_logo"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/name_icon"
        android:drawablePadding="10dp"
        android:hint="Enter Your Name"
        android:layout_margin="7dp"
        android:textSize="20sp"
        android:id="@+id/Name_id"/>

    <EditText
        android:id="@+id/Email_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/email_icon"
        android:drawablePadding="10dp"
        android:layout_margin="7dp"
        android:hint="enter Email Id"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/mobile_icon"
        android:drawablePadding="10dp"
        android:hint="Enetr mobile No"
        android:textSize="20sp"
        android:layout_margin="7dp"
        android:id="@+id/Mobile_id"
        android:inputType="number"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter date of Birth"
        android:drawableLeft="@drawable/date_icon"
        android:drawablePadding="10dp"
        android:textSize="20sp"
        android:layout_margin="7dp"
        android:id="@+id/Dob_id"
        android:inputType="datetime"/>

    <EditText
        android:id="@+id/Password1_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/password_icon"
        android:drawablePadding="10dp"
        android:layout_margin="7dp"
        android:hint="enter Password"
        android:inputType="numberPassword"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert"
        android:textSize="20sp"
        app:backgroundTint="#E62D6C" />

</LinearLayout>