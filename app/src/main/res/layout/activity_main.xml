<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background3"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="40dp"
        android:textColor="#8C0B0B"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/login_logo2"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:hint="Enter Email"
        android:textSize="23sp"
        android:textColor="#09680C"
        android:drawableLeft="@drawable/email_icon"
        android:drawablePadding="10dp"
        android:id="@+id/Email1_id"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/password_icon"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:textSize="23sp"
        android:id="@+id/Pass1_id"
        android:textColor="#09680C"
        android:layout_margin="13dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:text="Login"
        android:id="@+id/Login_id"
        android:onClick="LoginMethod"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Don't have Account? Register"
        android:textSize="20dp"
        android:textColor="#360887"
        android:onClick="RegisterMethod"/>



</LinearLayout>